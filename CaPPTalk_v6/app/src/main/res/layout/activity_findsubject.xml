<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:paddingTop="15dp"
                android:paddingLeft="5dp"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/alexandra"
                android:text="Capptalk "
                android:textColor="#ffffff"
                android:textSize="50dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejufont"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="수강 중인 과목을 검색하여 추가해주시기 바랍니다."
                    android:gravity="center"
                    android:textSize="18dip"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejufont"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="10dp"
                    android:text="추가가 완료된 후에는 하단의 버튼을 눌러 캡톡을 사용하실 수 있습니다."
                    android:gravity="center"
                    android:textSize="18dip"/>

            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#868686"
            android:hint="검색어를 입력하세요."/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:divider="#999999"
            android:dividerHeight="1dp"
            android:layout_marginBottom="5dp">
        </ListView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="캡톡 시작하기" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>