<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sidebarQuestionItem_textView_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/jejufont"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/sidebarQuestionItem_textView_content"
            android:layout_below="@id/sidebarQuestionItem_textView_title"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/jejufont"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/sidebarQuestionItem_textView_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e6e7ea">

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>