<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sidebarGroupItem_textView_title"
            android:layout_width="150dp"
            android:fontFamily="@font/jejufont"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sidebarGroupItem_textView_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/sidebarGroupItem_textView_joinUserSize"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/sidebarGroupItem_textView_slush"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:text="/"/>

            <TextView
                android:id="@+id/sidebarGroupItem_textView_maxUserSize"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sidebarGroupItem_textView_creator"
            android:fontFamily="@font/jejufont"
            android:layout_below="@id/sidebarGroupItem_textView_title"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"/>

        <Button
            android:id="@+id/sidebarGroupItem_button_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/jejufont"
            android:textStyle="bold"
            android:text="참가"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e6e7ea">

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>