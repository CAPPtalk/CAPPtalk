<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78c6bf">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/image_groupactivity"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#78c6bf"
                android:src="@drawable/add_group"
                >
            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <com.github.florent37.materialtextfield.MaterialTextField
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:mtf_labelColor="#ffffff"
                android:textSize="10pt"
                >

                <EditText
                    android:id="@+id/g_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:textColor="#333"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:inputType="textShortMessage"
                    android:fontFamily="@font/jejufont"
                    android:hint="그룹방 제목"
                    android:singleLine="true" />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <com.github.florent37.materialtextfield.MaterialTextField
                android:id="@+id/count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                app:mtf_labelColor="#ffffff"
                android:textSize="10pt"
                >

                <EditText
                    android:id="@+id/max_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:inputType="textShortMessage"
                    android:fontFamily="@font/jejufont"
                    android:textStyle="bold"
                    android:hint="최소 인원수"
                    android:selectAllOnFocus="false"
                    android:singleLine="true" />

            </com.github.florent37.materialtextfield.MaterialTextField>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_make"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:fontFamily="@font/jejufont"
                android:background="#106e8f"
                android:textStyle="bold"
                android:text="생성" />
        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>